// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cliente {
  id            Int            @id @default(autoincrement())
  nome          String
  cognome       String
  cellulare     String?
  note          String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  // Relazioni
  appuntamenti  Appuntamento[]
  interventi    Intervento[]
}

model Operatore {
  id           String         @id @default(cuid())
  nome         String
  cognome      String
  colore       String?        // es. "#FF6B6B"
  attivo       Boolean        @default(true)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  // Relazioni
  appuntamenti Appuntamento[]

  @@map("operatori")
}

model Appuntamento {
  id          Int      @id @default(autoincrement())
  clienteId   Int
  operatoreId String
  dataOra     DateTime
  servizio    String
  durata      Int      // durata in minuti
  stato       String   @default("confermato") // confermato, completato, cancellato
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relazioni
  cliente   Cliente   @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  operatore Operatore @relation(fields: [operatoreId], references: [id], onDelete: Cascade)

  // Constraint: un operatore non pu√≤ avere appuntamenti sovrapposti nello stesso momento
  @@unique([operatoreId, dataOra])
}

model Intervento {
  id          Int      @id @default(autoincrement())
  clienteId   Int
  data        DateTime @default(now())
  descrizione String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relazioni
  cliente   Cliente              @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  prodotti  InterventoProdotto[]
}

model Prodotto {
  id          Int      @id @default(autoincrement())
  nome        String
  descrizione String?
  prezzo      Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relazioni
  interventi  InterventoProdotto[]
}

model InterventoProdotto {
  interventoId Int
  prodottoId   Int
  quantita     Int       @default(1)
  createdAt    DateTime  @default(now())

  // Relazioni
  intervento   Intervento @relation(fields: [interventoId], references: [id], onDelete: Cascade)
  prodotto     Prodotto   @relation(fields: [prodottoId], references: [id], onDelete: Cascade)

  @@id([interventoId, prodottoId])
}

model Servizio {
  id        String   @id @default(cuid())
  nome      String
  prezzo    Float
  durata    Int      @default(60) // durata predefinita in minuti
  attivo    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("servizi")
}
